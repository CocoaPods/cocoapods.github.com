ruby:
  parents = []
  parent = current_resource
  while parent = parent.parent
    parents.unshift(parent)
  end

doctype html
html
  head
    meta http-equiv="refresh" content="0;URL=http://guides.cocoapods.org">

    meta charset="utf-8"
    meta name="keywords" content="documenation cocoapods objective-c packcage manager"
    title = page_title
    == favicon_tag "/favicon.ico"
    == stylesheet_link_tag "bootstrap.min", "font-awesome", "style", "style2"
    script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"
    == javascript_include_tag "bootstrap", "mousetrap.min", "javascript"

  body
    .container
      #body
        #sections-container
          .row
            .span8
              ul.breadcrumb
                li#logo
                  a href="http://cocoapods.org" CocoaPods
                  span.divider
                   |/

                - for resource in parents
                  li
                    == link_to page_title(resource), "/#{resource.destination_path}"
                    span.divider
                      |/
                li.active = page_title

            .span2
              .form.navbar-search
                input.search-query.typeahead type="text" placeholder="Search - shortcut: s"
                i.icon-search.icon-search

        .page-container
          == yield

        #footer
          hr
          p.note
            | Alpha app ‚ù§ Help us to improve this website at: 
            a href="https://github.com/CocoaPods/cocoapods.github.com" cocoapods/cocoapods.github.com

    #search.modal.hide
      .modal-header
        button type="button" class="close" data-dismiss="modal" aria-hidden="true" &times;
        h3 Search
      .modal-body
        p test
